{
  "name": "@webstory/toolbox",
  "version": "1.0.7",
  "description": "JavaScript utility classes toolbox",
  "scripts": {
    "build:node": "tsc --project tsconfig.node.json",
    "build:browser": "tsc --project tsconfig.browser.json",
    "build": "npm run build:node && npm run build:browser",
    "test": "jest",
    "clean": "rimraf build/*"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./build/node/index.d.ts",
        "default": "./build/browser/index.js"
      },
      "require": {
        "types": "./build/node/index.d.ts",
        "default": "./build/node/index.js"
      }
    }
  },
  "main": "./build/browser/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/webstory/toolbox"
  },
  "keywords": [
    "utility",
    "util",
    "utils",
    "toolbox"
  ],
  "author": "Hoya Kim <hoya@mychar.info>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@types/jest": "^29.5.1",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "lru-cache": "^9.1.1",
    "nodemon": "^2.0.22",
    "performance-now": "^2.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}